<h1>Bobb's Burgers!</h1>
<div id="bob">
  <img src="assets/img/bob.gif">
</div>

<div id="lists">
  <div id="not-eaten">
    <h2>Burgers to eat</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div id="is-eaten">
    <h2>Burgers you've devoured</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div id="add-more">
  <h2>Add Moar Burgers to Eat</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger-name">Burger Name:</label>
      <input type="text" id="burger-name" name="name">
    </div>

    <button type="submit">Order Up!</button>
  </form>
</div>